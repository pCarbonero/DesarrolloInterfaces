<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio05.Views.PokemonLegendario"
             Title="PokemonLegendario">
    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Start">
            <Label Padding="20,20,0,0"
                   FontSize="30"
                   FontAttributes="Bold">Arceus</Label>

            <Grid Padding="20,0,0,0" >
                <Image             
                    Source="arceus.png"
                    HeightRequest="100"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
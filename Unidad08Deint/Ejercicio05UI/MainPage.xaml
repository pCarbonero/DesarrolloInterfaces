<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio05UI.MainPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <ScrollView Grid.Row="0">
            <VerticalStackLayout>
                <ListView x:Name="listaView" ItemsSource="{Binding lista}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Nombre}"
                              Detail="{Binding Apellidos}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="50">
                    <Button HeightRequest="50" WidthRequest="50" ImageSource="pen.png" BackgroundColor="LightBlue"/>
                    <Button HeightRequest="50" WidthRequest="50" ImageSource="trash.png" BackgroundColor="LightBlue"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
        <Button Grid.Row="0" HeightRequest="50" WidthRequest="50"
                HorizontalOptions="End" VerticalOptions="End"
                Margin="20"
                ImageSource="more.png" BackgroundColor="LightBlue"/>
    </Grid>
    
    


</ContentPage>

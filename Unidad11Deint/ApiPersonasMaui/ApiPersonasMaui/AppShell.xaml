<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ApiPersonasMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ApiPersonasMaui"
    xmlns:p="clr-namespace:ApiPersonasMaui.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ApiPersonasMaui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Add"
    ContentTemplate="{DataTemplate p:AddPersonaView}"
    Route="AddPersona" />

</Shell>
